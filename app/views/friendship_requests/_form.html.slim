= form_for @friendship_request do |f|
  - if @friendship_request.errors.any?
    #error_explanation
      h2 = "#{pluralize(@friendship_request.errors.count, "error")} prohibited this friendship_request from being saved:"
      ul
        - @friendship_request.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :friend
    = f.collection_select :friend_id, User.all, :id, :email
  .actions = f.submit
